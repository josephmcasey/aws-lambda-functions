{
  "compilerOptions": {
    "experimentalDecorators": true,
    "rootDir": ".",
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es5",
    "lib": [ "es2015", "es2017", "DOM" ],
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "pretty": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "preserveConstEnums": true,
    "emitDecoratorMetadata": true,
    "types" : [
      "aws-lambda",
      "caseless",
      "form-data",
      "jszip",
      "mime-types",
      "node",
      "proxyquire",
      "request",
      "tough-cookie"
    ],
    "typeRoots": [
      "./types",
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "types/*"
  ]
}
